<div class="container mt-4">
  <h1>施設情報を編集する</h1>
  <%= form_with(model: @room, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, "施設名" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description, "説明" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :checkin_date, "チェックイン日" %>
      <%= form.date_select :checkin_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :checkout_date, "チェックアウト日" %>
      <%= form.date_select :checkout_date, class: "form-control" %>
    </div>
    <%= form.submit "更新", class: "btn btn-primary" %>
  <% end %>
</div>
