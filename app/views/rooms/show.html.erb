<div class="container mt-4">
  <h1><%= @room.name %></h1>
  <p><%= @room.description %></p>
  <p>チェックイン: <%= @room.formatted_checkin_date %></p>
  <p>チェックアウト: <%= @room.formatted_checkout_date %></p>

  <h2>予約する</h2>
  <%= form_with(model: [@room, @reservation]) do |form| %>
    <div class="form-group">
      <%= form.label :start_date, "開始日" %>
      <%= form.datetime_select :start_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :end_date, "終了日" %>
      <%= form.datetime_select :end_date, class: "form-control" %>
    </div>
    <%= form.submit "予約", class: "btn btn-primary" %>
  <% end %>
</div>