<h1>予約一覧</h1>
<% @reservations.each do |reservation| %>
  <div class="reservation">
    <div class="room-image">
      <% if reservation.room.image.present? %>
        <%= image_tag 'default_room_image.png', alt: reservation.room.name %>
      <% else %>
        <%= image_tag 'default_room_image.png', alt: 'デフォルト画像' %>
      <% end %>
    </div>
    <div class="room-details">
      <h2><%= reservation.room.name %></h2>
      <p><%= reservation.room.description %></p>
      <p>合計料金: <%= number_to_currency(reservation.total_price) %></p>
      <p>チェックイン日: <%= reservation.check_in_date %></p>
      <p>チェックアウト日: <%= reservation.check_out_date %></p>
      <p>予約確定日時: <%= reservation.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>
    </div>
  </div>
<% end %>

