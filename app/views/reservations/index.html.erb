<h1>予約一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>施設名</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.room.name %></td>
        <td><%= format_date(reservation.check_in) %></td>
        <td><%= format_date(reservation.check_out) %></td>
        <td><%= format_datetime(reservation.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>