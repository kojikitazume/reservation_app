<h1>予約済み一覧</h1>
<% @reservations.each do |reservation| %>
  <div class="reservation">
    <div class="room-image">
      <% if reservation.room.present? && reservation.room.image.present? %>
      <%= link_to room_path(reservation.room) do %>
        <%= image_tag reservation.room.image.url, alt: reservation.room.name %>
       <% end %>
     <% else %>
      <%= link_to room_path(reservation.room) do %>
        <%= image_tag 'default_room_image.png', alt: 'デフォルト画像' %>
      <% end %>
     <% end %>
    </div>
    <div class="room-details">
      <p>施設名: <%= link_to reservation.room.name if reservation.room %></p>
      <p>紹介文: <%= reservation.room.description if reservation.room %></p>
      <p>合計料金: <%= reservation.total_price %>円</p>
      <p>チェックイン日: <%= reservation.check_in_date %></p>
      <p>チェックアウト日: <%= reservation.check_out_date %></p>
      <p>予約日時: <%= reservation.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>
    </div>
  </div>
<% end %>


